    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // --- Xử lý modal trailer và nút load more ---
            const modal = document.getElementById('trailerModal');
            const trailerFrame = document.getElementById('trailerFrame');
            const closeBtn = document.querySelector('.close');
            const loadMoreBtn = document.getElementById('load-more-btn');
            const movieContainer = document.querySelectorAll('.align_movie')[0];
            
            let offset = {{initialLimit}} || 4; // Số phim đã hiển thị ban đầu
            const limit = 4; // Số phim cần tải thêm mỗi lần            // Kiểm tra nếu không còn phim nào để tải thêm, ẩn nút ngay từ đầu
            if (!{{hasMoreMovies}}) {
                console.log('No more movies available initially, hiding button');
                loadMoreBtn.style.display = 'none';
            } else {
                console.log('More movies available initially, showing button');
            }

            // Hàm để gắn sự kiện cho các trailer link mới
            function attachTrailerEvents() {
                document.querySelectorAll('.trailer-link').forEach(link => {
                    if (!link.hasListener) {
                        link.addEventListener('click', (event) => {
                            event.preventDefault();
                            const trailerUrl = link.getAttribute('data-trailer');
                            trailerFrame.src = trailerUrl;
                            modal.style.display = 'block';
                        });
                        link.hasListener = true;
                    }
                });
            }

            // Đóng modal khi nhấn vào nút "Đóng"
            closeBtn.addEventListener('click', () => {
                modal.style.display = 'none';
                trailerFrame.src = ''; // Xóa URL video để dừng phát
            });

            // Đóng modal khi nhấn ra ngoài modal
            window.addEventListener('click', (event) => {
                if (event.target === modal) {
                    modal.style.display = 'none';
                    trailerFrame.src = ''; // Xóa URL video để dừng phát
                }
            });

            // Gắn sự kiện cho trailer links ban đầu
            attachTrailerEvents();

            // Xử lý nút load more
            loadMoreBtn.addEventListener('click', function() {
                console.log('Load more button clicked');
                loadMoreBtn.textContent = 'ĐANG TẢI...';
                loadMoreBtn.disabled = true;

                fetch(`/api/load-more-movies?offset=${offset}&limit=${limit}`)                    .then(response => response.json())
                    .then(data => {
                        console.log('Data received from API:', data);
                        console.log('Movies array:', data.movies);
                        console.log('Data properties available:', Object.keys(data));

                        loadMoreBtn.textContent = 'XEM THÊM';
                        loadMoreBtn.disabled = false;

                        // Thêm log kiểm tra selector và data
                        console.log('typeof data.movies:', typeof data.movies, Array.isArray(data.movies));
                        console.log('data.movies:', data.movies);
                        console.log('movieContainer:', movieContainer);
                        if (!movieContainer) {
                            alert('Không tìm thấy movieContainer!');
                            return;
                        }

                        try {
                            if (Array.isArray(data.movies) && data.movies.length > 0) {
                                console.log('Processing', data.movies.length, 'movies');
                                // Xử lý trường hợp đặc biệt: nếu tải chính xác 1 phim và đã đạt tổng số
                                if (data.movies.length === 1 && (offset + 1) >= data.total) {
                                    console.log('Special case: Loaded exactly the last movie');
                                }
                                
                                // Tạo danh sách phim mới từ dữ liệu nhận được
                                data.movies.forEach((movie, index) => {
                                    console.log(`Adding movie ${index + 1}:`, movie.TenPhim, movie.ID_P);
                                    
                                    const movieBox = document.createElement('div');
                                    movieBox.className = 'moviebox';
                                    movieBox.innerHTML = `
                                        <img src="/img/img_poster/${movie.ID_P}.webp" alt="${movie.TenPhim}" width="100%" height="350px" style="object-fit: cover;">
                                        <div class="align_column_between" style="height: 100px;">
                                            <a style="color: #f8fafc; font-size: 18px; font-weight: bold;" href="">${movie.TenPhim}</a>
                                            <div class="align_row_between alignTrailer" style="width: 100%;">
                                                <div class="align_row LogoTrailer">
                                                    <div class="align_row BorderLogoTrailer" style="padding: 3px; border: 1px #f8fafc solid; border-radius: 50%; margin: 5px;">
                                                        <i style="color: black; font-size: 20px; background-color: #f8fafc; padding: 3px; border-radius: 50%;" class="ph ph-monitor-play"></i>
                                                    </div>
                                                    <a class="trailer-link" style="color: #f8fafc; font-size: 14px;" href="#" data-trailer="https://www.youtube.com/embed/${movie.LinkTrailer}">Xem Trailer</a>
                                                </div>
                                                <a style="padding: 10px 40px; background-color: #f3ea28; border-radius: 5px; color: black; font-family: 'Anton', sans-serif;" href="/movie_details/${movie.slug}">ĐẶT VÉ</a>
                                            </div>
                                        </div>
                                    `;
                                    movieContainer.appendChild(movieBox);                                    console.log(`Movie ${movie.TenPhim} with ID ${movie.ID_P} added to DOM`);
                                });                                // Cập nhật offset cho lần tải tiếp theo
                                offset += data.movies.length;
                                console.log('New offset:', offset);
                                
                                // Kiểm tra an toàn để ẩn nút khi đã tải hết phim
                                if (offset >= data.total) {
                                    console.log('Fail-safe: All movies loaded, hiding button');
                                    loadMoreBtn.style.display = 'none';
                                }
                                  // Sau khi thêm phim, gắn sự kiện cho trailer links mới
                                setTimeout(attachTrailerEvents, 100);
                                
                                // Kiểm tra xem còn phim để tải không - kiểm tra cả hai thuộc tính có thể có
                                console.log('hasMore value:', data.hasMore);
                                
                                // Kiểm tra đặc biệt để debug
                                console.log('Complete response object:', JSON.stringify(data));
                                console.log('Current offset:', offset);
                                console.log('Total movies in database:', data.total);
                                
                                // Kiểm tra để ẩn nút khi không còn phim
                                if (data.hasMore === false || offset >= data.total) {
                                    console.log('No more movies to load, hiding button');
                                    loadMoreBtn.style.display = 'none';
                                } else {
                                    console.log('More movies available, keeping button visible');
                                }
                            } else {
                                console.log('No movies received from API.');
                                loadMoreBtn.style.display = 'none';
                            }
                        } catch (err) {
                            console.error('Error processing movie data:', err);
                        }
                    })
                    .catch(error => {
                        console.error('Error fetching more movies:', error);
                        loadMoreBtn.textContent = 'THỬ LẠI';
                        loadMoreBtn.disabled = false;
                    });
            });
        });
    </script>
    <script>
        // --- Smart Search ---
            document.addEventListener('DOMContentLoaded', () => {
            const searchInput = document.getElementById('movie-search');
            const resultsBox = document.getElementById('search-results');

            if (!searchInput || !resultsBox) return;

            // Debounce function
            const debounce = (func, delay) => {
                let timeout;
                return (...args) => {
                    clearTimeout(timeout);
                    timeout = setTimeout(() => func(...args), delay);
                };
            };

            const handleSearch = async (query) => {
            try {
                const response = await fetch(`/movie_details/search?q=${encodeURIComponent(query)}`);
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const data = await response.json();
                console.log('Search results data:', data); // Add this for debugging
                displayResults(data);
            } catch (error) {
                console.error('Search failed:', error);
                resultsBox.innerHTML = '<li style="color: red;">Không thể tải kết quả</li>';
                
                // Try to load random movies as fallback
                try {
                    const fallbackResponse = await fetch('/movie_details/search');
                    const fallbackData = await fallbackResponse.json();
                    displayResults(fallbackData);
                } catch (fallbackError) {
                    console.error('Fallback also failed:', fallbackError);
                }
            }
        };

            const displayResults = (data) => {
            resultsBox.innerHTML = '';
            
            if (!data || data.length === 0) {
                resultsBox.innerHTML = '<li>Không tìm thấy phim phù hợp</li>';
                return;
            }

            data.forEach(movie => {
                const li = document.createElement('li');
                li.innerHTML = `
                    <a href="/movie_details/${movie.slug}">
                        ${movie.TenPhim}
                    </a>
                `;
                resultsBox.appendChild(li);
            });
        };

            // Event listeners
            searchInput.addEventListener('input', debounce((e) => {
                const query = e.target.value.trim();
                if (query) {
                    handleSearch(query);
                } else {
                    // Show random movies when empty
                    handleSearch('');
                }
            }, 300));

            searchInput.addEventListener('focus', () => {
                if (searchInput.value.trim() === '') {
                    handleSearch('');
                }
            });

            document.addEventListener('click', (e) => {
                if (!e.target.closest('.searchBar')) {
                    resultsBox.innerHTML = '';
                }
            });
        });
    </script>
