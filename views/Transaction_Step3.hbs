        }
        
        /* Error jumbotron */
        .error-jumbotron {
            justify-content: center;
        }
        
        .error-container {
            text-align: center;
            width: 100%;
            max-width: 600px;
        }
        
        .error-icon {
            font-size: 60px;
            color: #ef4444; /* Red */
            margin-bottom: 15px;
        }
        
        h2.error {
            color: #ef4444;
            margin: 0;
            font-size: 32px;
        }
        
        .error-message {
            color: rgba(255, 255, 255, 0.8);
            margin: 20px 0;
            font-size: 18px;
        }
        
        /* Action buttons */
        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
        }
        
        .left-buttons {
            justify-content: flex-start;
        }
        
        /* Button styling */
        .btn {
            padding: 12px 24px;
            border-radius: 6px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            transition: all 0.3s ease;
            cursor: pointer;
            border: none;
        }
        
        .btn-primary {
            background-color: #3b82f6; /* Blue */
            color: white;
        }
        
        .btn-primary:hover {
            background-color: #2563eb;
            transform: translateY(-2px);
        }
        
        .btn-secondary {
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }
        
        .btn-secondary:hover {
            background-color: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
        }
        
        .btn i {
            margin-right: 8px;
            font-size: 18px;
            vertical-align: middle;
        }
        
        /* Mobile responsiveness */
        @media (max-width: 768px) {
            .transaction-content {
                flex-direction: column;
            }
            
            .booking-info-container,
            .qr-container {
