<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hoàn tất</title>
    <link rel="stylesheet" href="/index.css">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/transaction_step3.css">
    <script src="https://unpkg.com/phosphor-icons"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Anton&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="top_bar">
        <div class="align_row" style="color: white;">
            <i style="font-size: 40px;" class="ph ph-video-camera"></i>
            <h1 style="font-size: 20px; margin: 0px 20px; font-weight: 600;">UIT THEATER</h1>
        </div>
        <div class="align_row">
            <a href="/" class="booking">
                <i style="margin-right: 10px; font-size: 25px;" class="ph ph-house"></i>
                <span style="font-family: 'Anton', sans-serif;">VỀ TRANG CHỦ</span>
            </a>
        </div>
    </div>

    <!-- Step Indicator -->
    <div class="step-indicator">
        <span class="step">1. THÔNG TIN KHÁCH HÀNG</span>
        <span class="step">2. THANH TOÁN</span>
        <span class="step active">3. HOÀN TẤT</span>
    </div>

    {{#if (eq code "00")}}
    <!-- Jumbotron - Success Layout -->
    <div class="jumbotron">
        <div class="success-header">
            <div class="success-icon">
                <i class="ph ph-check-circle"></i>
            </div>
            <h2 class="success">Giao dịch thành công!</h2>
        </div>

        <div class="transaction-content">
            <!-- Left Content -->
            <div class="booking-info-container">
                {{#if bookingDetails}}
                <div class="booking-details">
                    <h3>Chi tiết đặt vé</h3>
                    <div class="detail-item">
                        <span class="label">Mã đặt vé:</span>
                        <span class="value">{{bookingDetails.ID_DV}}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Phim:</span>
                        <span class="value">{{bookingDetails.TenPhim}}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Rạp:</span>
                        <span class="value">{{bookingDetails.TenRap}} - {{bookingDetails.TenPhong}}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Suất chiếu:</span>
                        <span class="value">{{bookingDetails.suatchieu}}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Ghế:</span>
                        <span class="value">{{bookingDetails.seats}}</span>
                    </div>
                    <div class="detail-item total">
                        <span class="label">Tổng tiền:</span>
                        <span class="value">{{bookingDetails.totalPrice}} VNĐ</span>
                    </div>
                </div>
                {{/if}}

                <div class="action-buttons left-buttons">
                    <a href="/" class="btn btn-primary">
                        <i class="ph ph-house"></i> Về trang chủ
                    </a>
                    <a href="/profile" class="btn btn-secondary">
                        <i class="ph ph-ticket"></i> Xem lịch sử đặt vé
                    </a>
                </div>
            </div>

            <!-- Right Content - QR Code -->
            <div class="qr-container">
                <h3>Mã QR đặt vé</h3>
                <div class="qr-code">
                    <img id="qrCodeImage" alt="QR Code">
                </div>
                <p class="qr-help-text">Quét mã QR này tại quầy để nhận vé của bạn</p>
                <button id="downloadQr" class="btn btn-primary">
                    <i class="ph ph-download"></i> Tải mã QR
                </button>
            </div>
        </div>
    </div>
    {{else}}
    <!-- Jumbotron - Error Layout -->
    <div class="jumbotron error-jumbotron">
        <div class="error-container">
            <div class="error-icon">
                <i class="ph ph-x-circle"></i>
            </div>
            <h2 class="error">Giao dịch thất bại!</h2>
            <p class="error-message">{{message}}</p>
            
            <div class="action-buttons">
                <a href="/" class="btn btn-primary">
                    <i class="ph ph-house"></i> Về trang chủ
                </a>
                <a href="/movie_list" class="btn btn-secondary">
                    <i class="ph ph-film-slate"></i> Xem phim khác
                </a>
            </div>
        </div>
    </div>
    {{/if}}

    <div class="bottom_bar">
        <div class="align_row_between" style="width: 1200px; margin: 30px 0px; ">
            <p>© 2023 Uitheater. All rights reserved.</p>
            <div class="align_row">
                <a style="color: #f8fafc; padding: 0px 10px;" href="">Toàn diện</a>
                <a style="color: #f8fafc; padding: 0px 10px;" href="">Sáng tạo</a>
                <a style="color: #f8fafc; padding: 0px 10px;" href="">Phụng sự</a>
            </div>
        </div>
        <div class="align_row">
            <i style="font-size: 50px;" class="ph ph-video-camera"></i>
            <h1 style="font-size: 30px; margin-left: 20px; margin-top: 8px; font-weight: bold;">UIT THEATER</h1>
        </div>
        <div class="align_row">
            <h4 style="font-size: 25px; margin: 10px 0px;">[NT208.P24] - Nhóm 3</h4>
        </div>
    </div>

    <script>
        // Function to convert Vietnamese characters to non-accented equivalents
        function removeVietnameseAccents(str) {
            if (!str) return '';
            
            // Vietnamese character mapping
            return str
                // Remove accents
                .replace(/[àáạảãâầấậẩẫăằắặẳẵ]/g, "a")
                .replace(/[èéẹẻẽêềếệểễ]/g, "e")
                .replace(/[ìíịỉĩ]/g, "i")
                .replace(/[òóọỏõôồốộổỗơờớợởỡ]/g, "o")
                .replace(/[ùúụủũưừứựửữ]/g, "u")
                .replace(/[ỳýỵỷỹ]/g, "y")
                .replace(/đ/g, "d")
                // Uppercase
                .replace(/[ÀÁẠẢÃÂẦẤẬẨẪĂẰẮẶẲẴ]/g, "A")
                .replace(/[ÈÉẸẺẼÊỀẾỆỂỄ]/g, "E")
                .replace(/[ÌÍỊỈĨ]/g, "I")
                .replace(/[ÒÓỌỎÕÔỒỐỘỔỖƠỜỚỢỞỬ]/g, "O")
                .replace(/[ÙÚỤỦŨƯỪỨỰỬỮ]/g, "U")
                .replace(/[ỲÝỴỶỸ]/g, "Y")
                .replace(/Đ/g, "D");
        }

        // Generate QR code when the page loads
        document.addEventListener('DOMContentLoaded', function() {
            // Get booking details
            const bookingId = "{{bookingDetails.ID_DV}}";
            const movieName = "{{bookingDetails.TenPhim}}";
            const theaterName = "{{bookingDetails.TenRap}} - {{bookingDetails.TenPhong}}";
            const showtime = "{{bookingDetails.suatchieu}}";
            const seats = "{{bookingDetails.seats}}";
            const totalPrice = "{{bookingDetails.totalPrice}}";
            
            // Create a text-based format that will display directly when scanned
            // This will work with most QR scanners without needing to visit a website
            const qrContent = 
                "VÉ XEM PHIM UIT THEATER\n\n" +
                "Mã vé: " + bookingId + "\n" +
                "Phim: " + movieName + "\n" +
                "Rạp: " + theaterName + "\n" +
                "Suất chiếu: " + showtime + "\n" +
                "Ghế: " + seats + "\n" +
                "Tổng tiền: " + totalPrice + " VND\n\n" +
                "Vui lòng xuất trình mã QR này tại quầy vé.";
            
            console.log("QR Content:", qrContent);
            
            // Generate QR code with detailed text info
            document.getElementById('qrCodeImage').src = 
                "https://api.qrserver.com/v1/create-qr-code/?size=300x300&margin=10&data=" + 
                encodeURIComponent(qrContent);
            
            // Add a note explaining what the QR represents
            document.querySelector('.qr-help-text').innerHTML = 
                `Quét mã QR này tại quầy để nhận vé của bạn<br>
                <small>Mã đặt vé: ${bookingId}</small>`;
        });
        
        // Download QR code functionality
        document.getElementById('downloadQr')?.addEventListener('click', function() {
            const qrImage = document.getElementById('qrCodeImage');
            const bookingId = "{{{bookingDetails.ID_DV}}}";
            
            if (!qrImage || !qrImage.src) {
                console.error("QR code image not found or not loaded");
                return;
            }
            
            // Create a canvas to draw the QR code
            const canvas = document.createElement('canvas');
            const context = canvas.getContext('2d');
            const image = new Image();
            
            image.onload = function() {
                canvas.width = image.width;
                canvas.height = image.height;
                context.drawImage(image, 0, 0);
                
                // Convert canvas to downloadable link
                try {
                    const downloadLink = document.createElement('a');
                    downloadLink.download = `UIT-Theater-Ticket-${bookingId}.png`;
                    downloadLink.href = canvas.toDataURL('image/png');
                    document.body.appendChild(downloadLink);
                    downloadLink.click();
                    document.body.removeChild(downloadLink);
                } catch (e) {
                    console.error("Error during QR download:", e);
                    alert("Có lỗi khi tải QR code. Vui lòng thử lại sau.");
                }
            };
            
            image.crossOrigin = "Anonymous";
            image.src = qrImage.src;
        });
    </script>

    <style>
