                return;
            }

            // Tách chuỗi thành mảng dựa trên dấu *
            const parts = description.split('*');

            // Tạo các dòng từ mảng
            parts.forEach(part => {
                if (part.trim()) { // Bỏ qua các phần tử rỗng
                    const line = document.createElement('h4'); // Tạo thẻ <p> cho mỗi dòng
                    line.textContent = part.trim(); // Loại bỏ khoảng trắng thừa
                    container.appendChild(line); // Thêm dòng vào container
                }
            });
        });
    
