<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{#if searchQuery}}Kết quả tìm kiếm: {{searchQuery}}{{else}}Phim đang chiếu{{/if}}</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/index.css">
    <link rel="stylesheet" href="/movie_details.css">
    <script src="https://unpkg.com/phosphor-icons"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Anton&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="top_bar" style="border-bottom: 1px rgba(140, 140, 140, 0.5) solid;">
        <div class="align_row" style="color: white;">
            <a href="/" style="text-decoration: none; color: white; display: flex; align-items: center;">
                <i style="font-size: 40px;" class="ph ph-video-camera"></i>
                <h1 style="font-size: 20px; margin: 0px 20px; font-weight: 600;">UIT THEATER</h1>
            </a>
        </div>
        <div class="align_row">
            <a href="" class="booking">
                <i style="margin-right: 10px; font-size: 25px;" class="ph ph-ticket"></i>
                <span style="font-family: 'Anton', sans-serif;">ĐẶT VÉ NGAY</span>
            </a>
            <a href="" class="booking">
                <i style="margin-right: 10px; font-size: 25px;" class="ph ph-popcorn"></i>
                <span style="font-family: 'Anton', sans-serif;">ĐẶT BẮP NƯỚC</span>
            </a>
        </div>
        {{> searchbar}}
        <div class="align_row" style="color: white;">
            <div class="align_row" style="margin-left: 50px;">
                {{#if user}}
                    <div class="user-menu" class="align_row">
                        <div class="dropdown" class="align_row">
                            <img src="/profile/avatar/{{user.ID_U}}" class="img-user" alt="">
                            <div class="dropdown-menu">
                                <a href="/profile"><i style="margin: 0px 8px 0px 0px;" class="ph ph-user"></i>Trang cá nhân</a>
                                <a href="/logout"><i style="margin: 0px 8px 0px 0px;" class="ph ph-sign-out"></i>Đăng xuất</a>
                            </div>
                        </div>
                        <button class="dropdown-toggle">{{user.TongSoTien}} VNĐ</button>
                    </div>
                {{else}}
                    <i style="font-size: 30px; margin: 10px;" class="ph ph-user-circle"></i>
                    <h2 style="font-size: 20px;">
                        <a class="btSign" style="background-color: #0f172a; color: #f8fafc;" href="/login">Đăng nhập</a>
                    </h2>
                {{/if}}
            </div>
        </div>
    </div>

    <div class="movie_position" style="margin-top: 100px;">
        {{#if searchQuery}}
            <h1 style="font-size: 40px; font-family: 'Anton', sans-serif; margin-bottom: 20px;">KẾT QUẢ TÌM KIẾM: "{{searchQuery}}"</h1>
            {{#if phim.length}}
                <p style="color: #f8fafc; margin-bottom: 40px;">Tìm thấy {{phim.length}} kết quả</p>
            {{/if}}
        {{else}}
            <h1 style="font-size: 40px; font-family: 'Anton', sans-serif; margin-bottom: 40px;">PHIM ĐANG CHIẾU</h1>
        {{/if}}

        {{#if toast}}
            <div class="toast-notification {{toast.type}}" style="margin: 20px 0; padding: 15px; background: {{#if (eq toast.type 'error')}}#ff4444{{else}}#00C851{{/if}}; color: white; border-radius: 5px;">
                {{toast.message}}
            </div>
        {{/if}}

        {{#each phim}}
            <div class="position_box" style="margin-bottom: 30px;">
                <div class="movie_details align_row" style="margin: 0; padding: 20px;">
                    <div class="movie_img" style="width: 200px;">
                        <img src="/img/img_poster/{{this.ID_P}}.webp" alt="{{this.TenPhim}}" width="100%" style="border-radius: 8px;">
                    </div>
                    <div class="movie_text" style="height: auto; margin-left: 30px;">
                        <h1 style="font-size: 30px; font-family: 'Anton', sans-serif; margin-bottom: 15px;">{{this.TenPhim}}</h1>
                        <div class="align_row" style="margin-bottom: 10px;">
                            <h4 style="font-size: 16px;">{{this.TheLoai}}</h4>
                        </div>
                        <div class="align_row" style="margin-bottom: 10px;">
                            <h4 style="font-size: 16px;">{{this.ThoiLuong}} phút</h4>
                        </div>
                        <div class="align_row" style="margin-bottom: 10px;">
                            <h4 style="font-size: 16px;">{{this.NgonNgu}}</h4>
                        </div>
                        <div class="align_row" style="margin-bottom: 15px;">
                            <h4 style="font-size: 16px;">T{{this.DoTuoi}}: Phim dành cho khán giả từ đủ {{this.DoTuoi}} tuổi trở lên</h4>
                        </div>
                        <div class="align_row" style="margin-top: auto;">
                            <div class="align_row" style="padding: 3px; border: 1px white solid; border-radius: 50%; margin: 5px;">
                                <i style="color: black; font-size: 20px; background-color: white; padding: 3px; border-radius: 50%;" class="ph ph-monitor-play"></i>
                            </div>
                            <a class="trailer-link" style="color: white; font-size: 14px; margin: 0 20px;" href="#" data-trailer="https://www.youtube.com/embed/{{this.LinkTrailer}}">Xem Trailer</a>
                            <a style="padding: 10px 40px; background-color: #f3ea28; border-radius: 5px; color: black; font-family: 'Anton', sans-serif;" href="/movie_details/{{this.ID_P}}">ĐẶT VÉ</a>
                        </div>
                    </div>
                </div>
            </div>
        {{else}}
            {{#unless searchQuery}}
                <p style="color: #f8fafc; text-align: center; width: 100%;">Không có phim nào đang chiếu.</p>
            {{/unless}}
        {{/each}}
    </div>

    <div class="bottom_bar">
        <div class="align_row_between" style="width: 1200px; margin: 30px 0px;">
            <p>© 2023 Uitheater. All rights reserved.</p>
            <div class="align_row">
                <a style="color: #f8fafc; padding: 0px 10px;" href="">Toàn diện</a>
                <a style="color: #f8fafc; padding: 0px 10px;" href="">Sáng tạo</a>
                <a style="color: #f8fafc; padding: 0px 10px;" href="">Phụng sự</a>
            </div>
        </div>
        <div class="align_row">
            <i style="font-size: 50px;" class="ph ph-video-camera"></i>
            <h1 style="font-size: 30px; margin-left: 20px; margin-top: 8px; font-weight: bold;">UIT THEATER</h1>
        </div>
        <div class="align_row">
            <h4 style="font-size: 25px; margin: 10px 0px;">[NT208.P24] - Nhóm 3</h4>
        </div>
    </div>

    {{!-- Khung chiếu phim trong nền --}}
    <div id="trailerModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <iframe id="trailerFrame" width="560" height="315" src="" frameborder="0" allowfullscreen></iframe>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const modal = document.getElementById('trailerModal');
            const trailerFrame = document.getElementById('trailerFrame');
            const closeBtn = document.querySelector('.close');

            // Mở modal khi nhấn vào "Xem Trailer"
            document.querySelectorAll('.trailer-link').forEach(link => {
                link.addEventListener('click', (event) => {
                    event.preventDefault();
                    const trailerUrl = link.getAttribute('data-trailer');
                    trailerFrame.src = trailerUrl;
                    modal.style.display = 'block';
                });
            });

            // Đóng modal khi nhấn vào nút "Đóng"
            closeBtn.addEventListener('click', () => {
                modal.style.display = 'none';
                trailerFrame.src = '';
            });

            // Đóng modal khi nhấn ra ngoài modal
            window.addEventListener('click', (event) => {
                if (event.target === modal) {
                    modal.style.display = 'none';
                    trailerFrame.src = '';
                }
            });

            // Auto-hide toast notifications after 3 seconds
            const toast = document.querySelector('.toast-notification');
            if (toast) {
                setTimeout(() => {
                    toast.style.display = 'none';
                }, 3000);
            }
        });
    </script>
</body>
</html>