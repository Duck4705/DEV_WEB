    <link href="https://fonts.googleapis.com/css2?family=Anton&display=swap" rel="stylesheet">
</head>
<body style="background-color: #0f172a;">
    <div class="top_bar" style="border-bottom: 1px rgba(140, 140, 140, 0.5) solid; z-index: 1000;">
        <a href="/" class="align_row topbar-group" style="color: white; text-decoration: none;">
            <i style="font-size: 40px;" class="ph ph-video-camera"></i>
            <h1 class="logoFont" style="font-size: 20px; margin: 0px 10px; font-weight: 600;">UIT THEATER</h1>
        </a>
        <div class="align_row" style="color: white;">
            <div class="align_row" style="margin-left: 50px;">
                {{#if user}}
                    <div class="user-menu" class="align_row">
                        <div class="dropdown" class="align_row">
                            <img src="/profile/avatar/{{user.ID_U}}" class="img-user" alt="">
                            <div class="dropdown-menu">
                                <a href="/"><i style="margin: 0px 8px 0px 0px;" class="ph ph-user"></i>Home</a>
                                <a href="/logout"><i style="margin: 0px 8px 0px 0px;" class="ph ph-sign-out"></i>Đăng xuất</a>
                            </div>
                        </div>
                        <button class="dropdown-toggle">{{user.TongSoTien}} VNĐ</button>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
    <div class="alluser" style="width: 1200px; margin-top: 100px; align-items: flex-start;">
        <div class="user_left">
            <div class="user_img">
                <img src="/profile/avatar/{{user.ID_U}}" style="border-radius: 50%;" alt="" width="50px" height="50px" id="userAvatar">
                <div style="margin-left: 10px;">
                    <p style="font-size: 20px; margin-bottom: 5px;">{{user.HoTen}}</p>
                    <label for="avatarInput" style="font-size: 15px; border-bottom: #f8fafc 1px solid; width: fit-content; cursor: pointer;">Thay đổi ảnh đại diện</label>
                    <input type="file" id="avatarInput" style="display: none;" accept="image/*">
                </div>
            </div>
            <div class="user_role">
                <p style="font-family: 'Anton', sans-serif; font-size: 15px;">QUẢN TRỊ VIÊN</p>
            </div>
            <div class="user_point">
                <p>Tích điểm</p>
                <div class="progress_bar"></div>
                <p>0/10K</p>
            </div>
            <div class="user_menu">
                <div class="usertab menu-item" style="align-self: flex-start; padding: 10px;">
                    <a style="color: #f8fafc;" href="/profile"><i style="margin-right: 8px; margin-top: 5px;" class="ph ph-user"></i></a>
                    <a style="color: #f8fafc;" href="/profile">Trang cá nhân</a>
                </div>
                <div class="usertab menu-item" style="align-self: flex-start; padding: 10px;">
                    <a style="color: #f8fafc;" href="/profile/history"><i style="margin-right: 8px; margin-top: 5px; margin-top: 5px;" class="ph ph-clock-counter-clockwise"></i></a>
                    <a style="color: #f8fafc;" href="/profile/history">
                        {{#if user.VaiTro}}
                            {{#if (eq user.VaiTro "admin_role_1")}}
                                Quản lý giao dịch
                            {{else}}
                                Lịch sử giao dịch
                            {{/if}}
                        {{else}}
                            Lịch sử giao dịch
                        {{/if}}
                    </a>
                </div>
                <div class="usertab menu-item" style="align-self: flex-start; padding: 10px;">
                    <a style="color: #f8fafc;" href="/profile/admin/theaters"><i style="margin-right: 8px; margin-top: 5px;" class="ph ph-storefront"></i></a>
                    <a style="color: #f8fafc;" href="/profile/admin/theaters">Quản lý rạp chiếu</a>
                </div>
                <div class="usertab menu-item active" style="align-self: flex-start; padding: 10px; border-left: #f3ea28 2px solid;">
                    <a style="color: #f3ea28;" href="/profile/admin/movies"><i style="margin-right: 8px; margin-top: 5px;" class="ph ph-film-strip"></i></a>
                    <a style="color: #f3ea28;" href="/profile/admin/movies">Quản lý phim</a>
                </div>
                <div class="usertab menu-item" style="align-self: flex-start; padding: 10px;">
                    <a style="color: #f8fafc;" href="/profile/admin/showtimes"><i style="margin-right: 8px; margin-top: 5px;" class="ph ph-calendar"></i></a>
                    <a style="color: #f8fafc;" href="/profile/admin/showtimes">Quản lý suất chiếu</a>
                </div>
                <div class="usertab menu-item" style="align-self: flex-start; padding: 10px;">
                    <a style="color: #f8fafc;" href="/profile/admin/rooms"><i style="margin-right: 8px; margin-top: 5px;" class="ph ph-door"></i></a>
                    <a style="color: #f8fafc;" href="/profile/admin/rooms">Quản lý phòng chiếu</a>
                </div>
            </div>
            <div class="align_row menu-item" style="align-self: flex-start;">
                <a style="color: rgba(200, 200, 200, 0.5);" href=""><i style="margin-right: 8px; margin-top: 5px;" class="ph ph-sign-out"></i></a>
                <a style="color: rgba(200, 200, 200, 0.5);" href="/logout">Đăng xuất</a>
            </div>
        </div>
        <div class="user_right">
            <h1 style="font-size: 40px; font-family: 'Anton', sans-serif; margin: 20px 0px;">QUẢN LÝ PHIM</h1>
            
            <!-- Thêm dòng hiển thị tổng số phim -->
            <p style="margin-bottom: 15px; font-size: 16px; color: #f8fafc;">Tổng số phim: <strong>{{totalMovies}}</strong></p>
            
            {{#if error}}
                <p style="color: red;">{{error}}</p>
            {{/if}}
            {{#if success}}
                <p style="color: green;">{{success}}</p>
            {{/if}}
            
            <!-- Thêm bảng hiển thị dữ liệu phim -->
            <div class="data-table-container">
                <h4 style="margin: 10px; font-size: 20px; font-family: 'Anton', sans-serif; color: #0f172a;">DANH SÁCH PHIM</h4>
                <table class="admin-data-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên phim</th>
                            <th>Thể loại</th>
                            <th>Thời lượng</th>
                            <th>Quốc gia</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody id="movies-table-body">
                        {{#each movies}}
                        <tr id="movie-row-{{this.ID_P}}">
                            <td>{{this.ID_P}}</td>
                            <td>{{this.TenPhim}}</td>
                            <td>{{this.TheLoai}}</td>
                            <td>{{this.ThoiLuong}} phút</td>
                            <td>{{this.QuocGia}}</td>
                            <td>
                                <button class="hide-row-btn" data-id="{{this.ID_P}}" data-type="movie">
                                    <i class="ph ph-eye-slash"></i> Ẩn
                                </button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            
            <div class="align_column" style="color: #0f172a; background-color: #f8fafc; align-items: flex-start; width: 100%; padding: 10px; margin-top: 20px;">
    <div id="add-movie-response" style="margin: 10px 0; display: none;"></div>

    <form id="add-movie-form" action="/profile/admin/movies/add" method="POST" style="width: 100%;" enctype="multipart/form-data">
        <h4 style="margin: 10px; font-size: 20px; font-family: 'Anton', sans-serif;">Thêm phim</h4>

        <div class="align_row_between" style="width: 100%;">
            <div class="input_info">
                <label for="ID_P">ID Phim (tùy chọn):</label>
                <input type="text" id="ID_P" name="ID_P" placeholder="Để trống để tự động tạo">
            </div>
        </div>

        <div class="align_row_between" style="width: 100%;">
            <div class="input_info">
                <label for="TenPhim">Tên phim:</label>
                <input type="text" id="TenPhim" name="TenPhim" required>
            </div>
            <div class="input_info">
                <label for="TheLoai">Thể loại:</label>
                <input type="text" id="TheLoai" name="TheLoai" required>
            </div>
        </div>
        <div class="align_row_between" style="width: 100%;">
            <div class="input_info">
                <label for="LinkTrailer">Link trailer:</label>
                <input type="text" id="LinkTrailer" name="LinkTrailer">
            </div>
            <div class="input_info">
                <label for="poster">Hình ảnh poster:</label>
                <input type="file" id="poster" name="poster" accept="image/*" style="padding: 10px 0;">
                <div id="poster-preview" style="margin-top: 10px; display: none;">
                    <img id="poster-image" src="" alt="Poster Preview" style="max-width: 100px; max-height: 150px;">
                    <button type="button" id="remove-poster" style="background-color: #ff4d4d; color: white; border: none; padding: 5px 10px; margin-left: 10px; cursor: pointer;">Xóa</button>
                </div>
            </div>
        </div>
        <div class="input_info" style="width: 100%;">
            <label for="MoTaPhim">Mô tả phim:</label>
            <textarea id="MoTaPhim" name="MoTaPhim"></textarea>
        </div>
        <div class="align_row_between" style="width: 100%;">
            <div class="input_info">
                <label for="QuocGia">Quốc gia:</label>
                <input type="text" id="QuocGia" name="QuocGia">
            </div>
            <div class="input_info">
                <label for="ThoiLuong">Thời lượng (phút):</label>
                <input type="number" id="ThoiLuong" name="ThoiLuong">
            </div>
        </div>
        <div class="align_row_between" style="width: 100%;">
            <div class="input_info">
                <label for="NgonNgu">Ngôn ngữ:</label>
                <input type="text" id="NgonNgu" name="NgonNgu">
            </div>
            <div class="input_info">
                <label for="DoTuoi">Độ tuổi:</label>
                <input type="number" id="DoTuoi" name="DoTuoi">
            </div>
        </div>
        <div class="input_info" style="width: 100%; margin-bottom: 15px;">
            <label for="NoiDung">Nội dung:</label>
            <textarea id="NoiDung" name="NoiDung"></textarea>
        </div>
        <button type="submit" style="background-color: #f3ea28; border: none; margin: 10px; padding: 10px 20px; font-size: 15px; font-family: 'Anton', sans-serif;">THÊM PHIM</button>
    </form>
</div>
            <div class="align_column" style="color: #0f172a; background-color: #f8fafc; align-items: flex-start; width: 100%; padding: 10px; margin-top: 20px;">
                <h4 style="margin: 10px; font-size: 20px; font-family: 'Anton', sans-serif;">Xóa phim</h4>
                <form action="/profile/admin/movies/delete" method="POST" style="width: 100%;">
                    <div class="input_info" style="width: 100%; margin-bottom: 15px;">
                        <label for="ID_P">ID phim cần xóa (vd: P1, P2):</label>
                        <input type="text" id="ID_P" name="ID_P" required style="width: 100%;">
                    </div>
                    <button type="submit" style="background-color: #ff4d4d; border: none; margin: 10px; padding: 10px 20px; font-size: 15px; font-family: 'Anton', sans-serif; color: white;">XÓA PHIM</button>
                </form>
            </div>
        </div>
    </div>
    <div class="bottom_bar" style="margin-top: 150px;">
        <div class="align_row_between" style="width: 1200px; margin: 30px 0px; ">
            <p>© 2023 Uitheater. All rights reserved.</p>
            <div class="align_row hide-mobile">
                <a style="color: #f8fafc; padding: 0px 10px;" href="">Toàn diện</a>
                <a style="color: #f8fafc; padding: 0px 10px;" href="">Sáng tạo</a>
                <a style="color: #f8fafc; padding: 0px 10px;" href="">Phụng sự</a>
            </div>
        </div>
        <div class="align_row">
            <i style="font-size: 50px;" class="ph ph-video-camera"></i>
            <h1 style="font-size: 30px; margin-left: 20px; margin-top: 8px; font-weight: bold;">UIT THEATER</h1>
        </div>
        <div class="align_row">
            <h4 style="font-size: 25px; margin: 10px 0px;">[NT208.P24] - Nhóm 3</h4>
        </div>
    </div>
    <script>
    document.addEventListener('DOMContentLoaded', () => {
        const avatarInput = document.getElementById('avatarInput');
        const userAvatar = document.getElementById('userAvatar');
        
        if (avatarInput) {
            avatarInput.addEventListener('change', () => {
                const file = avatarInput.files[0];
                if (file) {
                    const formData = new FormData();
                    formData.append('avatar', file);
                    fetch('/profile/upload-avatar', {
                        method: 'POST',
                        body: formData
                    })
                    .then(response => response.json())
                    .then data => {
                        if (data.success) {
                            location.reload();
                        }
                    })
                    .catch(err => {
                        console.error('Error uploading avatar:', err);
                        location.reload();
                    });
                }
            });
        }
        
        // Add event listeners for hide buttons
        document.querySelectorAll('.hide-row-btn').forEach(button => {
            button.addEventListener('click', function() {
                const id = this.getAttribute('data-id');
                const type = this.getAttribute('data-type');
                const row = document.getElementById(`movie-row-${id}`);
                
                if (!row) {
                    console.error(`Row with ID movie-row-${id} not found`);
                    return;
                }
                
                console.log(`Hiding row with ID: movie-row-${id}`);
                
                // Hide the row with animation
                row.style.opacity = '0';
                setTimeout(() => {
                    row.style.display = 'none';
                }, 300);
                
                // Send AJAX request to hide the item
                fetch(`/profile/admin/${type}s/hide`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ id }),
                })
                .then(response => response.json())
                .then(data => {
                    if (!data.success) {
                        console.error('Error hiding row:', data.message);
                        // Restore the row if there was an error
                        row.style.display = '';
                        row.style.opacity = '1';
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    // Restore the row if there was an error
                    row.style.display = '';
                    row.style.opacity = '1';
                });
            });
        });
        
        // Poster preview functionality
        const posterInput = document.getElementById('poster');
        const posterPreview = document.getElementById('poster-preview');
        const posterImage = document.getElementById('poster-image');
        const removeButton = document.getElementById('remove-poster');
        
        if (posterInput) {
            posterInput.addEventListener('change', function() {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        posterImage.src = e.target.result;
                        posterPreview.style.display = 'flex';
                    }
                    reader.readAsDataURL(file);
                }
            });
        }
        
        if (removeButton) {
            removeButton.addEventListener('click', function() {
                posterInput.value = '';
                posterPreview.style.display = 'none';
            });
        }
        
        // Form submission handling with error display
        const form = document.getElementById('add-movie-form');
        const responseDiv = document.getElementById('add-movie-response');
        
        if (form) {
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Show loading state
                const submitBtn = form.querySelector('button[type="submit"]');
                const originalBtnText = submitBtn.textContent;
                submitBtn.textContent = 'ĐANG XỬ LÝ...';
                submitBtn.disabled = true;
                
                const formData = new FormData(this);
                
                // Log form data to console for debugging
                console.log('Submitting form with data:');
                for (const [key, value] of formData.entries()) {
                    console.log(`${key}: ${value instanceof File ? value.name : value}`);
                }
                
                fetch('/profile/admin/movies/add', {
                    method: 'POST',
                    body: formData
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! Status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    responseDiv.style.display = 'block';
                    
                    if (data.success) {
                        responseDiv.style.color = 'green';
                        responseDiv.textContent = data.message || 'Thêm phim thành công!';
                        form.reset();
                        
                        // Clear poster preview if it exists
                        const posterPreview = document.getElementById('poster-preview');
                        if (posterPreview) {
                            posterPreview.style.display = 'none';
                        }
                        
                        // Reload the page after a delay to show updated list
                        setTimeout(() => {
                            location.reload();
                        }, 1500);
                    } else {
                        responseDiv.style.color = 'red';
                        responseDiv.textContent = data.message || 'Lỗi không xác định khi thêm phim.';
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    responseDiv.style.display = 'block';
                    responseDiv.style.color = 'red';
                    responseDiv.textContent = `Lỗi: ${error.message}`;
                })
                .finally(() => {
                    // Restore button state
                    submitBtn.textContent = originalBtnText;
                    submitBtn.disabled = false;
                });
            });
        }
    });
    </script>
</body>
</html>