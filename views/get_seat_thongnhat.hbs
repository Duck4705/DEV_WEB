            background: #f9f9f9;
            border: 1px solid #ddd;
        }
        .movie-info h2 {
            margin-top: 0;
            color: #333;
        }
        #timer {
            background: #333;
            color: white;
            padding: 10px 15px;
            border-radius: 5px;
            display: none;
            min-width: 120px; /* Đảm bảo có chiều rộng tối thiểu */
            text-align: center; /* Canh giữa nội dung */
        }
        #time {
            font-family: monospace; /* Sử dụng font cố định để đảm bảo các kí tự có cùng chiều rộng */
            font-weight: bold;
            display: inline-block;
            min-width: 40px; /* Chiều rộng tối thiểu cho phần hiển thị thời gian */
        }
        #selected-seats {
            margin-left: 20px;
            display: none;
        }
        .legend {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }
        .legend-item {
            display: flex;
            align-items: center;
        }
        .legend-item span {
            color: white; /* Thêm màu trắng cho chữ trong các mục chú thích */
        }
        .legend-box {
            width: 20px;
            height: 20px;
            margin-right: 5px;
            border: 1px solid #ddd;
            border-radius: 3px;
        }
        button {
            padding: 10px 20px;
            background: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
        }
        button:disabled {
            background: #cccccc;
            cursor: not-allowed;
        }
       
        #cancel-btn {
            background: #f44336;
        }
    </style>
